module Parse.Variable exposing
    ( Error (..)
    , lowerCase
    )


import Parser.Advanced as Parser exposing (Parser)


type Error
    = NotAVariable


lowerCase : Parser c Error String
lowerCase =
    Parser.succeed {}
        |> Parser.skip (Parser.chompIf Char.isLower NotAVariable)
        |> Parser.skip (Parser.chompWhile Char.isLower)
        |> Parser.getChompedString

